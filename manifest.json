{
  "manifest_version": 3,
  "name": "Smart Filters for Hotels",
  "version": "1.0",
  "description": "Quickly apply common hotel filters—like price, amenities, and more—across popular booking websites.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.hotels.com/*",
        "*://www.booking.com/*",
        "*://www.expedia.com/*",
        "*://www.agoda.com/*"
      ],
      "js": [
        "agoda_com.js",
        "agoda_com_helper.js",
        "booking_com.js",
        "booking_com_helper.js",
        "content.js",
        "helper.js",
        "hotels_com.js",
        "popup.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}