{
    "manifest_version": 3,
    "name": "Hotels.com Filter Memory",
    "version": "1.0",
    "description": "Remembers your filter preferences on Hotels.com",
    "permissions": ["storage"],
    "host_permissions": ["https://www.hotels.com/*"],
    "content_scripts": [
      {
        "matches": ["*://www.hotels.com/*"],
        "js": ["content.js", "popup.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }